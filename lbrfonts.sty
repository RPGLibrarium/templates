\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lbrfonts}[2020/04/17 RPG Librarium CI font families]

%%%
% Dependencies
\RequirePackage{mathspec}


%%%
% Text Fonts
\setmainfont[
    UprightFont={* Light},
    BoldFont={* Semibold},
    ItalicFont={* Light Italic},
    BoldItalicFont={* Semibold Italic}
]
{Source Serif Pro}

\setsansfont[
    UprightFont={* Light},
    BoldFont={* Semibold},
    ItalicFont={* Light Italic},
    BoldItalicFont={* Semibold Italic}
]
{Source Sans Pro}%
[Scale=MatchLowercase]

\setmonofont[
    UprightFont={* Light},
    BoldFont={* Semibold},
    ItalicFont={* Light Italic},
    BoldItalicFont={* Semibold Italic}
]
{Source Code Pro}%
[Scale=MatchLowercase]
%
%%%


%%%
% Math Fonts
\setmathfont(Digits,Latin,Greek)[
    UprightFont={* Light},
    BoldFont={* Semibold},
    ItalicFont={* Light Italic},
    BoldItalicFont={* Semibold Italic}
]
{Source Serif Pro}
%
%%%


